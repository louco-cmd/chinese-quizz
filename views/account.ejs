    .contributions-grid {
      display: grid;
      grid-template-columns: repeat(53, 15px); /* 53 colonnes de 15px */
      grid-template-rows: repeat(7, 15px); /* 7 lignes de 15px */
      gap: 3px;
      margin: 0 auto;
      width: max-content;
