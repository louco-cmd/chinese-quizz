<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Réinitialiser le mot de passe - Chinese Quiz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Réinitialiser le mot de passe</h3>
                    </div>
                    <div class="card-body">
                        <div id="resetForm">
                            <div class="mb-3">
                                <label class="form-label">Nouveau mot de passe</label>
                                <input type="password" class="form-control" id="newPassword" required>
                                <small class="form-text text-muted">
                                    8 caractères minimum, 1 majuscule, 1 chiffre
                                </small>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Confirmer le mot de passe</label>
                                <input type="password" class="form-control" id="confirmPassword" required>
                            </div>
                            <button class="btn btn-primary" onclick="resetPassword()">
                                Réinitialiser
                            </button>
                        </div>
                        
                        <div id="message" class="mt-3 d-none"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Récupérer le token depuis l'URL
        const urlParams = new URLSearchParams(window.location.search);
        const token = urlParams.get('token');

        if (!token) {
            window.location.href = '/forgot-password';
        }

        // Vérifier le token au chargement
        async function verifyToken() {
            try {
                const response = await fetch(`/auth/verify-reset-token?token=${token}`);
                const data = await response.json();
                
                if (!data.valid) {
                    showMessage('Lien invalide ou expiré. Veuillez demander un nouveau lien.', 'danger');
                    document.getElementById('resetForm').classList.add('d-none');
                }
            } catch (err) {
                showMessage('Erreur de vérification', 'danger');
            }
        }

        async function resetPassword() {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (newPassword !== confirmPassword) {
                showMessage('Les mots de passe ne correspondent pas', 'danger');
                return;
            }

            // Vérification regex côté client aussi
            const passwordRegex = /^(?=.*[A-Z])(?=.*\d).{8,}$/;
            if (!passwordRegex.test(newPassword)) {
                showMessage('Mot de passe : 8 caractères min, 1 majuscule, 1 chiffre', 'danger');
                return;
            }

            try {
                const response = await fetch('/auth/reset-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ token, newPassword })
                });

                const data = await response.json();
                
                if (response.ok) {
                    showMessage('Mot de passe réinitialisé avec succès ! Redirection vers la connexion...', 'success');
                    setTimeout(() => {
                        window.location.href = '/login';
                    }, 3000);
                } else {
                    showMessage(data.error || 'Erreur', 'danger');
                }
            } catch (err) {
                showMessage('Erreur réseau', 'danger');
            }
        }

        function showMessage(text, type) {
            const messageDiv = document.getElementById('message');
            messageDiv.innerHTML = `
                <div class="alert alert-${type}">
                    ${text}
                </div>
            `;
            messageDiv.classList.remove('d-none');
        }

        // Vérifier le token au chargement
        window.onload = verifyToken;
    </script>
</body>
</html>