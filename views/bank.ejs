<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mon Compte - 加油！</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-bottom: 1rem;
        }
        .balance-card {
            border: 1px solid #dee2e6;
            background: white;
            position: relative;
            overflow: hidden;
        }
        .balance-watermark {
            position: absolute;
            top: 50%;
            right: 20px;
            transform: translateY(-50%);
            font-size: 1.2rem;
            color: #6c757d;
            opacity: 0.3;
            font-weight: 500;
        }
        .transaction-positive {
            border-left: 4px solid #28a745;
        }
        .transaction-negative {
            border-left: 4px solid #dc3545;
        }
        .balance-amount {
            font-size: 3rem;
            font-weight: 800;
            color: #6c757d;
            line-height: 1;
        }
        .balance-symbol {
            font-size: 2rem;
            font-weight: 600;
            color: #6c757d;
            margin-right: 0.5rem;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('partials/header') %>
    <%- include('partials/navbar', {currentPage: 'account'}) %>

    <div class="container py-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">
                <i class="bi bi-wallet2 me-2"></i>
                Mon Compte
            </h4>
        </div>

        <!-- Carte Balance -->
        <div class="card balance-card mb-4">
            <div class="card-body text-center py-5">
                <div class="balance-watermark">Balance</div>
                <div class="d-flex justify-content-center align-items-center">
                    <span class="balance-amount" id="currentBalance">0</span>
                    <span class="balance-symbol"> ₵</span>
                </div>
            </div>
        </div>

        <!-- Liste des Transactions -->
        <div class="card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h6 class="mb-0">Historique des transactions</h6>
                <button class="btn btn-outline-secondary btn-sm" onclick="loadTransactions()">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
            </div>
            <div class="card-body p-0">
                <div id="transactions-list">
                    <div class="text-center py-4">
                        <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                        <p class="mt-2 text-muted small">Chargement...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let allTransactions = [];

        // Initialisation
        document.addEventListener('DOMContentLoaded', function() {
            loadBalance();
            loadTransactions();
        });

        // Charger le solde
        async function loadBalance() {
            try {
                const response = await fetch('/api/balance');
                const data = await response.json();
                document.getElementById('currentBalance').textContent = data.balance.toLocaleString();
            } catch (error) {
                console.error('Erreur chargement solde:', error);
                document.getElementById('currentBalance').textContent = 'Erreur';
            }
        }

        // Charger les transactions
        async function loadTransactions() {
            try {
                showTransactionsLoading(true);
                const response = await fetch('/api/transactions');
                const transactions = await response.json();
                allTransactions = transactions;
                displayTransactions(transactions);
            } catch (error) {
                console.error('Erreur chargement transactions:', error);
                showTransactionsError();
            } finally {
                showTransactionsLoading(false);
            }
        }

        // Afficher les transactions
        function displayTransactions(transactions) {
            const container = document.getElementById('transactions-list');

            if (transactions.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-receipt fs-2 opacity-50"></i>
                        <p class="mt-2 small">Aucune transaction</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = transactions.map(transaction => `
                <div class="list-item d-flex justify-content-between align-items-center border-bottom p-3 ${transaction.amount > 0 ? 'transaction-positive' : 'transaction-negative'}">
                    <div class="d-flex align-items-center">
                        <div class="avatar me-3">
                            <i class="bi ${transaction.amount > 0 ? 'bi-arrow-up-right text-success' : 'bi-arrow-down-left text-danger'}"></i>
                        </div>
                        <div>
                            <div class="small fw-medium">${transaction.description}</div>
                            <div class="text-muted" style="font-size: 0.75rem;">
                                ${new Date(transaction.created_at).toLocaleDateString('fr-FR')}
                            </div>
                        </div>
                    </div>
                    <div class="text-end">
                        <div class="small fw-bold ${transaction.amount > 0 ? 'text-success' : 'text-danger'}">
                            ${transaction.amount > 0 ? '+' : ''}${transaction.amount}
                        </div>
                        <div class="text-muted small" style="font-size: 0.7rem;">
                            ${transaction.type}
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Fonctions utilitaires
        function showTransactionsLoading(show) {
            const container = document.getElementById('transactions-list');
            if (show) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                        <p class="mt-2 text-muted small">Chargement...</p>
                    </div>
                `;
            }
        }

        function showTransactionsError() {
            document.getElementById('transactions-list').innerHTML = `
                <div class="alert alert-warning m-3 small">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    Erreur de chargement
                </div>
            `;
        }
    </script>
</body>
</html>