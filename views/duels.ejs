        </div>
      </div>
    </div>

    <!-- Popup de d√©fi am√©lior√©e -->
    <div id="duelPopup" class="confirm-popup" style="display: none;">
      <div class="confirm-popup-content" style="max-width: 440px; padding: 32px;">
        <!-- En-t√™te -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
          <h5 style="font-weight: 600; font-size: 1.3rem; margin: 0;">Challenge <span id="opponentName"></span></h5>
          <button type="button" class="btn-close" onclick="closeDuelPopup()" style="font-size: 1rem;"></button>
        </div>

        <form id="duelForm">
          <input type="hidden" id="opponentId">

          <!-- Type de duel : boutons avec ic√¥nes -->
          <div style="margin-bottom: 32px;">
            <div style="font-size: 0.85rem; font-weight: 600; color: #555; margin-bottom: 12px; letter-spacing: 0.5px;">DUEL TYPE</div>
            <div style="display: flex; gap: 16px;">
              <!-- Random -->
              <label class="duel-type-label" style="flex: 1; cursor: pointer;">
                <input type="radio" name="duelType" value="classic" checked style="display: none;">
                <div class="duel-type-card" style="border: 2px solid #e0e0e0; border-radius: 18px; padding: 18px 8px; text-align: center; background-color: #f9f9f9; transition: all 0.2s;">
                  <div style="font-size: 2.2rem; margin-bottom: 8px;">üé≤</div>
                  <div style="font-weight: 600; margin-bottom: 6px; font-size: 1rem;">Random</div>
                  <div style="font-size: 0.8rem; color: #666; line-height: 1.3;">half your words<br>half your partner's</div>
                </div>
              </label>
              <!-- AA -->
              <label class="duel-type-label" style="flex: 1; cursor: pointer;">
                <input type="radio" name="duelType" value="match_aa" style="display: none;">
                <div class="duel-type-card" style="border: 2px solid #e0e0e0; border-radius: 18px; padding: 18px 8px; text-align: center; background-color: #f9f9f9; transition: all 0.2s;">
                  <div style="font-size: 2.2rem; margin-bottom: 8px;">ü§ù</div>
                  <div style="font-weight: 600; margin-bottom: 6px; font-size: 1rem;">AA</div>
                  <div style="font-size: 0.8rem; color: #666; line-height: 1.3;">only words you<br>have in common</div>
                </div>
              </label>
            </div>
          </div>

          <!-- Nombre de mots : radios plus gros -->
          <div style="margin-bottom: 32px;">
            <div style="font-size: 0.85rem; font-weight: 600; color: #555; margin-bottom: 12px; letter-spacing: 0.5px;">NUMBER OF WORDS</div>
            <div style="display: flex; gap: 12px;">
              <label class="word-count-label" style="flex: 1; display: flex; align-items: center; justify-content: center; gap: 8px; border: 2px solid #e0e0e0; border-radius: 14px; padding: 14px; cursor: pointer; background-color: #f9f9f9; transition: all 0.2s;">
                <input type="radio" name="wordCount" value="10" style="transform: scale(1.3);"> <span style="font-weight: 600; font-size: 1.2rem;">10</span>
              </label>
              <label class="word-count-label" style="flex: 1; display: flex; align-items: center; justify-content: center; gap: 8px; border: 2px solid #007bff; border-radius: 14px; padding: 14px; cursor: pointer; background-color: #e7f1ff; transition: all 0.2s;">
                <input type="radio" name="wordCount" value="20" checked style="transform: scale(1.3);"> <span style="font-weight: 600; font-size: 1.2rem;">20</span>
              </label>
              <label class="word-count-label" style="flex: 1; display: flex; align-items: center; justify-content: center; gap: 8px; border: 2px solid #e0e0e0; border-radius: 14px; padding: 14px; cursor: pointer; background-color: #f9f9f9; transition: all 0.2s;">
                <input type="radio" name="wordCount" value="30" style="transform: scale(1.3);"> <span style="font-weight: 600; font-size: 1.2rem;">30</span>
              </label>
            </div>
          </div>

          <!-- Mise -->
          <div style="margin-bottom: 32px;">
            <div style="font-size: 0.85rem; font-weight: 600; color: #555; margin-bottom: 8px; letter-spacing: 0.5px;">BET (coins)</div>
            <input type="number" id="betAmount" class="form-control" min="0" value="0" style="padding: 14px; border-radius: 14px; border: 2px solid #e0e0e0; font-size: 1rem;">
          </div>

          <!-- Boutons d'action -->
          <div style="display: flex; gap: 12px;">
            <button type="button" class="btn btn-outline-secondary" onclick="closeDuelPopup()" style="flex: 1; padding: 14px; border-radius: 14px; font-weight: 600; border: 2px solid #e0e0e0;">Cancel</button>
            <button type="button" class="btn btn-primary" onclick="createDuel()" style="flex: 1; padding: 14px; border-radius: 14px; font-weight: 600; background: linear-gradient(135deg, #007bff, #0056b3); border: none;">Send a duel</button>
          </div>
          <!-- Zone d'erreur -->
          <div id="duelPopupError" class="alert alert-danger" style="display: none; margin-bottom: 20px; margin-top: 20px; padding: 10px; border-radius: 10px; font-size: 0.9rem;"></div>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      let currentOpponent = null;
      let searchTimeout = null;

      /* ==================== DEBUG TRACER ====================
      const originalShowAlert = window.showAlert;
      let showAlertCallCount = 0;

      window.showAlert = function(message, type) {
        showAlertCallCount++;
        console.group(`üîç showAlert #${showAlertCallCount}`);
        console.log('Message:', message);
        console.log('Type:', type);
        console.trace('Stack trace:'); // Montre d'o√π vient l'appel
        console.groupEnd();

        // Si c'est un message de limite, NE PAS appeler l'original
        const limitKeywords = ['limit', 'Limit', 'Daily', 'duel', 'upgrade', 'Premium'];
        const isLimitMessage = limitKeywords.some(keyword =>
          message.toLowerCase().includes(keyword.toLowerCase())
        );

        if (isLimitMessage) {
          console.error('üö´ BLOCKED: Limit message prevented from showing toaster!');
          console.error('Message was:', message);
          return; // ‚ö†Ô∏è NE PAS cr√©er de toaster
        }

        // Pour les autres messages, comportement normal
        return originalShowAlert.call(this, message, type);
      };*/


      // Initialisation
      document.addEventListener('DOMContentLoaded', function() {
        loadLeaderboard();
        loadMyStats();
        loadRecentDuels();
      });

      // Classement
      async function loadLeaderboard() {
        try {
          const response = await fetch('/api/duels/leaderboard');
          const data = await response.json();

          const container = document.getElementById('leaderboard-container');
          const currentUserId = <%= user.id %>; // R√©cup√®re l'ID de l'utilisateur connect√© depuis EJS

          if (data.length === 0) {
            container.innerHTML = `
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-trophy fs-2 opacity-50"></i>
                    <p class="mt-2 small">Aucun duel jou√©</p>
                </div>
            `;
            return;
          }

          container.innerHTML = data.map((user, index) => {
            const isCurrentUser = user.id === currentUserId;
            const clickAction = isCurrentUser ?
              'window.location.href=\'/account\'' :
              `viewUserProfile(${user.id})`;

            return `
                <div class="list-item d-flex justify-content-between align-items-center border-bottom p-3">
                    <div class="d-flex align-items-center">
                        <div class="avatar me-3">
                            ${index + 1}
                        </div>
                        <div>
                            <!-- NOM CLIQUABLE -->
                            <div class="fw-medium small user-name" 
                                 style="cursor: pointer; color: #0d6efd; ${isCurrentUser ? 'font-weight: bold !important;' : ''}" 
                                 onclick="${clickAction}">
                                ${user.name} ${isCurrentUser ? '<span class="badge bg-primary ms-1">You</span>' : ''}
                            </div>
                        </div>
                    </div>
                    <div class="d-flex gap-2 small">
                        <span class="text-success">${user.wins || 0}V</span>
                        <span class="text-danger">${user.losses || 0}D</span>
                        <span class="text-primary">${user.ratio || 0}%</span>
                    </div>
                </div>
            `;
          }).join('');

          // Ajouter des effets de hover pour am√©liorer l'UX
          setTimeout(() => {
            document.querySelectorAll('.user-name').forEach(name => {
              name.addEventListener('mouseenter', function() {
                this.style.textDecoration = 'underline';
              });
              name.addEventListener('mouseleave', function() {
                this.style.textDecoration = 'none';
              });
            });
          }, 100);

        } catch (error) {
          console.error('Erreur classement:', error);
          document.getElementById('leaderboard-container').innerHTML = `
            <div class="text-center py-4 text-muted">
                <i class="bi bi-exclamation-triangle"></i>
                <p class="mt-2 small">Erreur de chargement</p>
            </div>
        `;
        }
      }

      // Fonction pour voir le profil d'un autre utilisateur
      function viewUserProfile(userId) {
        window.location.href = `/user/${userId}`;
      }

      // Recherche
      function handleSearchKeyPress(event) {
        if (event.key === 'Enter') {
          event.preventDefault();
          searchDuelists();
        }
      }

      function handleSearchInput() {
        const query = document.getElementById('duelist-search').value.trim();
        const suggestions = document.getElementById('search-suggestions');

        if (query.length === 0) {
          suggestions.style.display = 'none';
          return;
        }

        if (searchTimeout) clearTimeout(searchTimeout);

        if (query.length >= 2) {
          searchTimeout = setTimeout(() => {
            searchDuelists(true);
          }, 300);
        } else {
          suggestions.style.display = 'none';
        }
      }

      async function searchDuelists(isSuggestionMode = false) {
        const query = document.getElementById('duelist-search').value.trim();
        if (!query) return;

        showSearchLoading(true);

        try {
          const response = await fetch(`/api/duels/search?q=${encodeURIComponent(query)}`);
          const results = await response.json();

          if (isSuggestionMode) {
            displaySearchSuggestions(results);
          } else {
            displaySearchResults(results);
          }
        } catch (error) {
          console.error('Erreur recherche:', error);
          displaySearchError();
        } finally {
          showSearchLoading(false);
        }
      }

      function displaySearchSuggestions(results) {
        const container = document.getElementById('search-suggestions');
        if (!results || results.length === 0) {
          container.style.display = 'none';
          return;
        }

        container.innerHTML = results.slice(0, 3).map(user => `
                <div class="list-group-item list-group-item-action p-2" 
                     onclick="selectSuggestion(${user.id}, '${user.name.replace(/'/g, "\\'")}')">
                    <div class="d-flex align-items-center">
                        <div class="avatar me-2">
                            <i class="bi bi-person"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="small fw-medium">${user.name}</div>
                        </div>
                    </div>
                </div>
            `).join('');

        container.style.display = 'block';
      }

      function displaySearchResults(results) {
        const container = document.getElementById('search-results');

        if (!results || results.length === 0) {
          container.innerHTML = `
                    <div class="text-center text-muted py-3">
                        <i class="bi bi-person-x"></i>
                        <div class="mt-1 small">Aucun utilisateur trouv√©</div>
                    </div>
                `;
          return;
        }

        container.innerHTML = results.map(user => `
                <div class="list-item d-flex justify-content-between align-items-center p-2 border-bottom">
                    <div class="d-flex align-items-center">
                        <div class="avatar me-2">
                            <i class="bi bi-person"></i>
                        </div>
                        <div>
                            <div class="small fw-medium">${user.name}</div>
                            <div class="text-muted" style="font-size: 0.75rem;">${user.email}</div>
                        </div>
                    </div>
                    <button class="btn btn-sm btn-outline-primary" 
                        onclick="openDuelPopup(${user.id}, '${user.name.replace(/'/g, "\\'")}')">
                        D√©fier
                    </button>
                </div>
            `).join('');
      }

      function selectSuggestion(userId, userName) {
        document.getElementById('duelist-search').value = userName;
        document.getElementById('search-suggestions').style.display = 'none';
        openDuelPopup(userId, userName);
      }

      function displaySearchError() {
        document.getElementById('search-results').innerHTML = `
                <div class="alert alert-warning small">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    Erreur lors de la recherche
                </div>
            `;
      }

      function showSearchLoading(show) {
