<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Mot de passe oublié - Chinese Quiz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Mot de passe oublié</h3>
                    </div>
                    <div class="card-body">
                        <div id="requestForm">
                            <p>Entrez votre adresse email pour recevoir un lien de réinitialisation.</p>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" required>
                            </div>
                            <button class="btn btn-primary" onclick="requestReset()">
                                Envoyer le lien
                            </button>
                            <a href="/index" class="btn btn-link">Retour à la connexion</a>
                        </div>
                        
                        <div id="message" class="mt-3 d-none"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function requestReset() {
            const email = document.getElementById('email').value;
            const messageDiv = document.getElementById('message');
            
            if (!email) {
                showMessage('Veuillez entrer votre email', 'danger');
                return;
            }

            try {
                const response = await fetch('/auth/forgot-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });

                const data = await response.json();
                
                if (response.ok) {
                    showMessage(data.message || 'Lien envoyé avec succès', 'success');
                    document.getElementById('requestForm').classList.add('d-none');
                } else {
                    showMessage(data.error || 'Erreur', 'danger');
                }
            } catch (err) {
                showMessage('Erreur réseau', 'danger');
            }
        }

        function showMessage(text, type) {
            const messageDiv = document.getElementById('message');
            messageDiv.innerHTML = `
                <div class="alert alert-${type}">
                    ${text}
                </div>
            `;
            messageDiv.classList.remove('d-none');
        }
    </script>
</body>
</html>