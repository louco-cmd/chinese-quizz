    <!-- Logo/Titre (disparaît sur dashboard) -->
    <span class="fs-3 fw-bold user-select-all" style="cursor: pointer;" onclick="window.location='/dashboard'">
      加油！
    </span>
  <% } else { %>
    <!-- Spacer invisible pour garder l'espace du logo -->
    <div style="width: 3rem;"></div>
  <% } %>
  
  <div class="d-flex align-items-center gap-2">
    <!-- Solde compact, aligné horizontalement -->
    <div title="Votre solde" class="d-flex align-items-center px-2 py-1 bg-white bg-opacity-10 rounded-pill text-white" style="min-width: fit-content; gap: 8px; user-select: none;">
      <i class="fa-solid fa-coins fs-5"></i>
