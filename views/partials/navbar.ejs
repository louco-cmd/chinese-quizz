<script>
// ðŸ”¥ SCRIPT DE FALLBACK SIMPLIFIÃ‰
document.addEventListener('DOMContentLoaded', function() {
    // Fallback activation
    const path = window.location.pathname;
    document.querySelectorAll('.jiayou-nav-link[data-jiayou-page]').forEach(link => {
        const page = link.getAttribute('data-jiayou-page');
        if (path.includes(page)) {
            link.classList.add('jiayou-active');
        }
    });
    
    // Protection hauteur body
    document.body.style.paddingBottom = '65px';
});

// Protection au redimensionnement
window.addEventListener('resize', function() {
    document.body.style.paddingBottom = '65px';
});

// ðŸ”¥ GESTION DES CLICS POUR ANIMATION
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.jiayou-nav-link:not(.jiayou-disabled)').forEach(link => {
        link.addEventListener('click', function(e) {
            // Animation de feedback au clic
            this.style.transform = 'scale(0.95)';
            setTimeout(() => {
                this.style.transform = '';
            }, 150);
        });
    });
});
</script>