<!-- views/pricing.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upgrade to Premium - Chinese Quiz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <style>
    .card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border-radius: 12px;
      overflow: hidden;
    }
    
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1) !important;
    }
    
    .card-title {
      font-weight: 700;
      color: #333;
    }
    
    .price-display {
      color: #0d6efd;
      margin: 1.5rem 0;
    }
    
    .feature-list li {
      padding: 0.5rem 0;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .feature-list li:last-child {
      border-bottom: none;
    }
    
    .badge-default {
      background-color: #6c757d;
      color: white;
      font-size: 0.7rem;
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
    }
    
    .cancel-notice {
      font-size: 0.85rem;
      color: #6c757d;
      margin-top: 0.5rem;
    }
    
    .btn-upgrade {
      padding: 0.75rem 2rem;
      font-weight: 600;
      border-radius: 8px;
      transition: all 0.3s ease;
    }
    
    .btn-upgrade:hover {
      transform: scale(1.05);
    }
  </style>
</head>
<body>
  <% 
    // Variables locales sécurisées
    const currentUser = typeof user !== 'undefined' ? user : null;
    const userPlan = currentUser?.subscription?.plan_name || 'free';
    const isPremium = userPlan === 'premium';
    const currentBalance = typeof balance !== 'undefined' ? balance : 0;
  %>
  
  <%- include('partials/header', {currentPage: 'pricing', user: currentUser, balance: currentBalance}) %>
  <%- include('partials/navbar', {currentPage: 'pricing', user: currentUser}) %>
  
  <div class="container py-5">
    <div class="text-center mb-5">
      <h1 class="display-5 fw-bold mb-3">Unlock Your Chinese Potential</h1>
      <p class="lead text-muted">Choose the plan that's right for you</p>
    </div>
    
    <div class="row justify-content-center">
      <!-- Free Plan -->
      <div class="col-md-5 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body p-4">
            <!-- Plan Header -->
            <div class="text-center mb-4">
              <h3 class="card-title fw-bold">Free</h3>
              <div class="price-display">
                <span class="display-4 fw-bold">€0</span>
                <span class="text-muted">/month</span>
              </div>
              
              <!-- Current Plan Badge -->
              <% if (userPlan === 'free') { %>
                <div class="mb-3">
                  <span class="badge-default">Default Plan</span>
                </div>
              <% } %>
            </div>
            
            <!-- Features List -->
            <ul class="feature-list list-unstyled mb-4">
              <li class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success me-3 fs-5"></i>
                <div>
                  <strong>100 words</strong>
                  <div class="text-muted small">Vocabulary limit</div>
                </div>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success me-3 fs-5"></i>
                <div>
                  <strong>3 decks</strong>
                  <div class="text-muted small">Organize your words</div>
                </div>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success me-3 fs-5"></i>
                <div>
                  <strong>1 duel/day</strong>
                  <div class="text-muted small">Challenge friends</div>
                </div>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success me-3 fs-5"></i>
                <div>
                  <strong>5 quizzes/day</strong>
                  <div class="text-muted small">Practice daily</div>
                </div>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-x-circle text-muted me-3 fs-5"></i>
                <div>
                  <span class="text-muted">No ads</span>
                  <div class="text-muted small">Premium feature</div>
                </div>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-x-circle text-muted me-3 fs-5"></i>
                <div>
                  <span class="text-muted">Offline mode</span>
                  <div class="text-muted small">Premium feature</div>
                </div>
              </li>
            </ul>
            
            <!-- Action Button -->
            <div class="text-center">
              <% if (userPlan === 'free') { %>
                <a href="/dashboard" class="btn btn-outline-secondary w-100 btn-upgrade">
                  <i class="bi bi-check-circle me-2"></i>
                  Current Plan
                </a>
              <% } else { %>
                <a href="/dashboard" class="btn btn-outline-secondary w-100 btn-upgrade">
                  Switch to Free
                </a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Premium Plan -->
      <div class="col-md-5 col-lg-4 mb-4">
        <div class="card border-primary border-2 h-100 shadow">
          <!-- Recommended Badge -->
          <div class="card-header bg-primary text-white text-center py-3">
            <h5 class="mb-0">
              <i class="bi bi-star-fill me-2"></i>
              Recommended
            </h5>
          </div>
          
          <div class="card-body p-4">
            <!-- Plan Header -->
            <div class="text-center mb-4">
              <h3 class="card-title fw-bold text-primary">Premium</h3>
              <div class="price-display">
                <span class="display-4 fw-bold text-primary">€3</span>
                <span class="text-muted">/month</span>
                <div class="cancel-notice">
                  <i class="bi bi-arrow-clockwise me-1"></i>
                  Cancel anytime
                </div>
              </div>
              
              <!-- Current Plan Badge -->
              <% if (isPremium) { %>
                <div class="mb-3">
                  <span class="badge bg-success">Active Plan</span>
                </div>
              <% } %>
            </div>
            
            <!-- Features List -->
            <ul class="feature-list list-unstyled mb-4">
              <li class="d-flex align-items-center">
                <i class="bi bi-infinity text-primary me-3 fs-4"></i>
                <div>
                  <strong>Unlimited words</strong>
                  <div class="text-muted small">Learn without limits</div>
                </div>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-infinity text-primary me-3 fs-4"></i>
                <div>
                  <strong>Unlimited decks</strong>
                  <div class="text-muted small">Organize everything</div>
                </div>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-infinity text-primary me-3 fs-4"></i>
                <div>
                  <strong>Unlimited duels</strong>
                  <div class="text-muted small">Challenge anytime</div>
                </div>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-infinity text-primary me-3 fs-4"></i>
                <div>
                  <strong>Unlimited quizzes</strong>
                  <div class="text-muted small">Practice endlessly</div>
                </div>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-shield-check text-primary me-3 fs-5"></i>
                <div>
                  <strong>No ads</strong>
                  <div class="text-muted small">Distraction-free learning</div>
                </div>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-download text-primary me-3 fs-5"></i>
                <div>
                  <strong>Offline mode</strong>
                  <div class="text-muted small">Learn anywhere</div>
                </div>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-file-earmark-arrow-down text-primary me-3 fs-5"></i>
                <div>
                  <strong>Export data</strong>
                  <div class="text-muted small">Backup your progress</div>
                </div>
              </li>
            </ul>
            
            <!-- Action Button -->
            <div class="text-center">
              <% if (isPremium) { %>
                <a href="/account" class="btn btn-success w-100 btn-upgrade">
                  <i class="bi bi-check-circle me-2"></i>
                  Premium Active
                </a>
                <div class="mt-3">
                  <a href="#" onclick="manageSubscription()" class="text-decoration-none small">
                    <i class="bi bi-gear me-1"></i>
                    Manage subscription
                  </a>
                </div>
              <% } else { %>
                <button onclick="upgradeToPremium()" class="btn btn-primary w-100 btn-upgrade py-3">
                  <i class="bi bi-lightning-charge-fill me-2"></i>
                  Upgrade to Premium
                </button>
                <div class="mt-3">
                  <small class="text-muted">
                    <i class="bi bi-shield-check me-1"></i>
                    Secure payment via Stripe
                  </small>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- FAQ Section -->
    <div class="row justify-content-center mt-5">
      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title mb-4">
              <i class="bi bi-question-circle text-primary me-2"></i>
              Frequently Asked Questions
            </h5>
            
            <div class="accordion" id="faqAccordion">
              <div class="accordion-item">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                    Can I switch between plans?
                  </button>
                </h2>
                <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                  <div class="accordion-body">
                    Yes! You can upgrade to Premium anytime. If you cancel Premium, you'll revert to the Free plan at the end of your billing period.
                  </div>
                </div>
              </div>
              
              <div class="accordion-item">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                    What payment methods do you accept?
                  </button>
                </h2>
                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                  <div class="accordion-body">
                    We accept all major credit cards (Visa, MasterCard, American Express) through our secure Stripe payment system.
                  </div>
                </div>
              </div>
              
              <div class="accordion-item">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                    Can I cancel my subscription?
                  </button>
                </h2>
                <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                  <div class="accordion-body">
                    Absolutely. You can cancel your Premium subscription at any time. You'll continue to have access until the end of your billing period, then revert to the Free plan.
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    async function upgradeToPremium() {
      try {
        // Show loading state
        const button = event.target;
        const originalText = button.innerHTML;
        button.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';
        button.disabled = true;
        
        const response = await fetch('/api/subscription/upgrade', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });
        
        const data = await response.json();
        
        if (data.url) {
          window.location.href = data.url;
        } else {
          // Restore button
          button.innerHTML = originalText;
          button.disabled = false;
          
          alert('Error: ' + (data.error || 'Unknown error'));
        }
      } catch (err) {
        console.error('Upgrade error:', err);
        alert('An error occurred. Please try again.');
        
        // Restore button
        if (button) {
          button.innerHTML = originalText;
          button.disabled = false;
        }
      }
    }
    
    async function manageSubscription() {
      try {
        const response = await fetch('/api/subscription/manage');
        const data = await response.json();
        
        if (data.url) {
          window.open(data.url, '_blank');
        } else {
          alert('Error: ' + (data.error || 'Unable to load subscription management'));
        }
      } catch (err) {
        console.error('Manage subscription error:', err);
        alert('An error occurred. Please try again.');
      }
    }
    
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
      var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
      });
    });
  </script>
</body>
</html>