<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Welcome to Jiayou Premium</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
  <link href="/css/accountandduels.css" rel="stylesheet">
</head>

<body>
    <% // Variables locales 
    const currentUser = locals.user || null; 
    const currentBalance = locals.balance || 0; 
    const isPremium = locals.isPremium || false;
    const hasInactiveSubscription = locals.hasInactiveSubscription || false;
    const subscriptionStatus = locals.subscriptionStatus || 'none';
    const userSubscription = locals.userSubscription || null;
  %>

  <%- include('partials/header', {currentPage: 'pricing', user: currentUser, balance: currentBalance}) %>
  <%- include('partials/navbar', {currentPage: 'pricing', user: currentUser}) %>

  <main class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-12 col-md-8 col-lg-6 text-center">
        
        <!-- Logo -->
        <div class="mb-4">
          <h1 class="display-1 fw-bold">加油</h1>
        </div>
        
        <!-- Welcome Message -->
        <div class="mb-5">
          <h2 class="display-6 fw-bold text-primary mb-3">
            Welcome to Jiayou Premium
          </h2>
          <p class="lead text-muted fs-4">
            Happy to count you with us!
          </p>
          <p class="fs-5 text-secondary">
            Enjoy your experience here
          </p>
        </div>
        
        <!-- Button -->
        <div class="mt-5">
          <a href="/dashboard" class="btn btn-primary btn-lg px-5 py-3">
            <i class="bi bi-rocket-takeoff me-2"></i>
            Go to Dashboard
          </a>
        </div>
        
      </div>
    </div>
  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>